<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppControleFinanceiro.View.EdicaoDeTransacao"
             Title="EdicaoDeTransacao">
    <VerticalStackLayout Spacing="10">
        <Border BackgroundColor="Black" Stroke="Transparent" Margin="15" Padding="15" StrokeShape="RoundRectangle 30">
            <Grid RowDefinitions="Auto" ColumnDefinitions="*, 30">
                <Label 
                    Text="Atualizar"
                    TextColor="White"
                    HorizontalOptions="Center" 
                    />

                <Image 
                    Source="close.png"
                    WidthRequest="17"
                    HorizontalOptions="Center" 
       
                    Grid.Row="0"
                    Grid.Column="1">
                    <Image.GestureRecognizers>
                        <TapGestureRecognizer Tapped="Toque"/>
                    </Image.GestureRecognizers>
                </Image>
            </Grid>
        </Border>
        
        <Grid ColumnDefinitions="*, *" Margin="30,5">
            
            <RadioButton  
                x:Name="EdicRdEntrada"
                IsChecked="True" 
                Content="Receita"/>
            
            <RadioButton 
                x:Name="EdicRdDespesa"
                HorizontalOptions="End" 
                Grid.Column="1" 
                Content="Despesa"/>
        
        </Grid>
        <Entry 
            x:Name="EdicNome"
            Placeholder="Nome" 
            Margin="15"/>
        
        <DatePicker 
            x:Name="EdicData"
            Margin="15"/>
        
        <Entry 
            x:Name="EdicValor"
            Placeholder="Valor" 
            Margin="15"/>
        <Button
            Text="SALVAR" 
            Margin="25" 
            
            FontAttributes="Bold"
            TextColor="Black"
            CornerRadius="22"
            Padding="30,10"
            HorizontalOptions="Center"
            Clicked="SalvarVoltar"/>

        <Label x:Name="MensagemErro" Margin="30" IsVisible="False" TextColor="Red" />
    </VerticalStackLayout>
</ContentPage>